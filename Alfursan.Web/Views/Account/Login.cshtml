@using Alfursan.Web.Models
@model LoginViewModel

@{
    ViewBag.Title = Resources.Login.PageTitle;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@ViewBag.Title</h4>
        <h6>@Resources.Login.TitleDesc</h6>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(f => f.Email, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resources.Login.PlaceHolderEmail })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(f => f.Password, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Resources.Login.PlaceHolderPass })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Log in" class="btn btn-primary btn-block" />
                @Html.ActionLink(Resources.Login.ForgotPass, "ForgotPassword", "Account", new { @class = "forgot-pass" })
            </div>
        </div>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <style>
        .form-horizontal .control-label {
            text-align: left;   
        }
    </style>
}