@model Alfursan.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (ViewData["success"] == null || string.IsNullOrEmpty(ViewData["success"].ToString()))
{
    using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@Resources.Login.ForgotPassTitle</h4>
        <h6>@Resources.Login.ForgotPassDesc</h6>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resources.Login.ForgotPassEmail })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" style="float: right" class="btn btn-primary" value="@Resources.Login.ForgotPassSend" />
            </div>
        </div>
    }
}
@Html.Partial("~/Views/Shared/_Message.cshtml")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
