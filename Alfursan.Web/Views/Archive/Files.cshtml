@using Alfursan.Domain

<h2>@ViewBag.Title</h2>
<p>
    @{WriteLiteral(ViewBag.Description);}
</p>
@model IEnumerable<Alfursan.Web.Models.AlfursanFileViewModel>
@{
    var currentUser = (User)Session["CurrentUser"];
}
<div class="alert alert-danger" id="message-delete-file">
    <span id="filename"></span>
    @ViewBag.DeleteMessage
    <input type="hidden" name="FileId" id="FileId" />
    <input type="hidden" name="selectedRow" id="selectedRow" />
    <input type="hidden" name="profileId" id="profileId" value="@currentUser.ProfileId" />
    <input type="button" class="btn btn-xs" id="delete-file-ok" value="@Resources.Files.btnOk" />
    <input type="button" class="btn btn-primary btn-xs" id="delete-file-cancel" value="@Resources.Files.btnNo" />
</div>

<table id="grid-files" class="table table-striped table-bordered hover" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th>@{Write(Resources.Files.FileTypeAll);}</th>
            @if (currentUser.ProfileId != (int)EnumProfile.Customer)
            {
                <th>@{ Write(Resources.Files.FileTypeAll); }</th>
            }
            <th>@{Write(Resources.Files.FileTypeAll);}</th>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <th></th>
            <th>@{Write(Resources.Files.FileName);}</th>
            <th>
                @{Write(Resources.Files.CreatedDate);}
            </th>
            <th>@{Write(Resources.Files.FileType);}</th>
            @if (currentUser.ProfileId != (int)EnumProfile.Customer)
            {
                <th>@{ Write(Resources.Files.CustomerName); }</th>
            }
            <th>@{Write(Resources.Files.CreatedBy);}</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var file in Model)
            {
                <tr data="@file.FileId">
                    <td></td>
                    <td>
                        <div class="checkbox col-lg-2">
                            <input type="checkbox" name="file" data="@file.FileId" data-filename="@file.FileName" data-filepath="@file.RelatedFileName">
                        </div>
                    </td>
                    <td><a href="/Uploaded/@file.RelatedFileName" download> @file.FileName</a></td>
                    <td>@file.CreateDate</td>
                    <td>@file.FileType</td>
                    @if (currentUser.ProfileId != (int)EnumProfile.Customer)
                    {
                        <td>@file.Customer.FullName</td>
                    }
                    <td>@file.CreatedUser.FullName</td>

                    <td>
                        @if (currentUser.ProfileId != (int)EnumProfile.CustomOfficer || file.CreatedUser.CreatedUserId == currentUser.UserId)
                        {
                            if (currentUser.ProfileId != (int)EnumProfile.Customer || file.CreatedUser.CreatedUserId == currentUser.UserId)
                            {
                                <span class="glyphicon glyphicon-trash delete-file" data="@file.FileId" filename="@file.OriginalFileName"></span>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>

</table>
<div class="clearfix"></div>
<input type="button" class="btn btn-lg" id="sendMail" value="@Resources.Files.SendMail" />
<label class="error-select-user">@Resources.Files.Error_SelectUser</label>
<div class="clearfix"></div>
<div class="modal fade" id="SendMailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Management.Modal_Btn_Close </span></button>
                <h4 class="modal-title" id="myModalLabel">@Resources.Management.Modal_Title_SendMail</h4>
            </div>
            <div class="modal-body">
                @{ Html.RenderPartial("_SendMail");}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Management.Modal_Btn_Close</button>
                <button type="button" class="btn btn-primary" id="get-checked-data">@Resources.Management.Modal_Btn_SendMail</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var dt = $('#grid-files').dataTable({
                "aoColumns": [
                    { "sWidth": "1%" },
                    { "sWidth": "5%" },
                    { "sWidth": "10%" },
                    { "sWidth": "12%" },
                    { "sWidth": "10%" },
                    @if (currentUser.ProfileId != (int) EnumProfile.Customer)
                        {
                            WriteLiteral( "{'sWidth':'12%'},");
                        }
                    { "sWidth": "12%" },
                    { "sWidth": "5%" }
                ],
                "order": [[2, "desc"]],
                "language": {
                    "url": "/Plugins/Datatable/lang/en.txt"
                }
                    , responsive: true
            })
                .columnFilter({
                    sPlaceHolder: "head:before",
                    aoColumns: [
                        null, null,
                        { type: "text" },
                        { type: "date-range" },
                        { type: "select", values: ['ShipmentDoc', 'AccountDoc', 'Other'], selected: '' },
                        @if (currentUser.ProfileId != (int) EnumProfile.Customer)
                        {
                            WriteLiteral("{type:'select'},");
                        }
                    { type: "select" }
                    ]

                });


            $('input[type="checkbox"]').click(function () {

                var isChecked = $(this).is(':checked');

                $(this).attr('checked', isChecked);
            });

            var message = $("#message-delete-file");
            $(message).css("display", "none");

            $(".delete-file").click(function () {
                var id = $(this).attr("data");
                var filename = $(this).attr("filename");
                var container = $("#message-delete-file");
                $("#filename").html(filename);
                $("#FileId").val(id);

                $(container).show("slow");

                $("#delete-file-cancel").click(function () {
                    $(container).hide(1000);
                });

                var targetRow = $(this).closest("tr").get(0);
                var aPos = dt.fnGetPosition(targetRow);

                $('#selectedRow').val(aPos);
            });

            $("#delete-file-ok").click(function () {
                $("#message-delete-file").hide(1000);

                var id = $("#FileId").val();

                var url = "/Archive/DeleteFile/" + id;
                AlfursanAjax.Request(url, "post", null, null, function () {
                    dt.fnDeleteRow($('#selectedRow').val());
                });
            });

            AlfursanManagement.ArchiveInit();

        });

    </script>
 
}
