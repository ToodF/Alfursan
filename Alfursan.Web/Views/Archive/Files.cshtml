@using Alfursan.Domain

<h2>@ViewBag.Title</h2>

@model IEnumerable<Alfursan.Web.Models.AlfursanFileViewModel>
@{
    var currentUser = (User)Session["CurrentUser"];
}
<div class="alert alert-danger" id="message-delete-file">
    <span id="filename"></span>
    @Resources.MessageResource.Warning_DeleteFile
    <input type="hidden" name="FileId" id="FileId" />
    <input type="hidden" name="selectedRow" id="selectedRow" />
    <input type="button" class="btn btn-xs" id="delete-file-ok" value="@Resources.Management.btnOk" />
    <input type="button" class="btn btn-primary btn-xs" id="delete-file-cancel" value="@Resources.Management.btnNo" />
</div>
@*<table>
        <tr>
            <td></td>
            <td><p id="createDate"></p></td>
        </tr>
    </table>*@
<p id="createDate"></p>
<table id="grid-files" class="table table-striped table-bordered hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @{Write(Resources.Archive.CreatedDate);}
            </th>
            <th>@{Write(Resources.Archive.FileName);}</th>
            <th>@{Write(Resources.Archive.FileType);}</th>
            <th>@{Write(Resources.Archive.CustomerName);}</th>
            <th>@{Write(Resources.Archive.CreatedBy);}</th>
            <th></th>
        </tr>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var file in Model)
            {
                <tr data="@file.FileId">
                    <td>
                        <div class="checkbox col-lg-2">
                            <input type="checkbox" name="file" data="@file.FileId">
                        </div>
                    </td>
                    <td>@file.CreateDate</td>
                    <td><a href="/Uploaded/@file.RelatedFileName" download> @file.OriginalFileName</a></td>
                    <td>@file.FileType</td>
                    <td>@file.Customer.FullName</td>
                    <td>@file.CreatedUser.FullName</td>

                    <td>
                        @if (currentUser.ProfileId != (int)EnumProfile.CustomOfficer || file.CreatedUser.CreatedUserId == currentUser.UserId)
                        {
                            if (currentUser.ProfileId != (int)EnumProfile.Customer || file.CreatedUser.CreatedUserId == currentUser.UserId)
                            {
                                <span class="glyphicon glyphicon-trash delete-file" data="@file.FileId" filename="@file.OriginalFileName"></span>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>

</table>

<input type="button" class="btn btn-lg" id="sendMail" value="@Resources.Management.SendMail" />


@section scripts
{
    <script src="~/Scripts/Alfursan.Ajax.js"></script>
    <script src="~/Scripts/Alfursan.Management.js"></script>

    <script>
        $(document).ready(function () {

            var dt = $('#grid-files').dataTable({
                "aoColumns": [
                    { "sWidth": "5%" },
                    { "sWidth": "10%" },
                    { "sWidth": "20%" },
                    { "sWidth": "15%" },
                    { "sWidth": "15%" },
                    { "sWidth": "15%" },
                    { "sWidth": "5%" }
                ],
                "order": [[2, "desc"]],
                "language": {
                    "url": "/Plugins/Datatable/lang/en.txt"
                },
                //responsive: true
            })
        .columnFilter({
            sPlaceHolder: "head:before",
            aoColumns: [
                null,
                { type: "date-range" },
                //{ type: "text" },
                null,
                { type: "select", values: ['ShipmentDoc', 'AccountDoc', 'Other'], selected: '' },
                null,
                null,
                //{ type: "text" },
                //{ type: "text" },
                null
            ]

        })
            ;

            $('input[type="checkbox"]').click(function () {

                var isChecked = $(this).is(':checked');

                $(this).attr('checked', isChecked);
            });

            var message = $("#message-delete-file");
            $(message).css("display", "none");

            $(".delete-file").click(function () {
                var id = $(this).attr("data");
                var filename = $(this).attr("filename");
                var container = $("#message-delete-file");
                $("#filename").html(filename);
                $("#FileId").val(id);

                $(container).show("slow");

                $("#delete-file-cancel").click(function () {
                    $(container).hide(1000);
                });

                var targetRow = $(this).closest("tr").get(0);
                var aPos = dt.fnGetPosition(targetRow);

                $('#selectedRow').val(aPos);
            });

            $("#delete-file-ok").click(function () {
                $("#message-delete-file").hide(1000);

                var id = $("#FileId").val();

                var url = "/Archive/DeleteFile/" + id;
                AlfursanAjax.Request(url, "post", null, null, function () {
                    dt.fnDeleteRow($('#selectedRow').val());
                });
            });

            AlfursanManagement.ArchiveInit();
        });

    </script>
}
