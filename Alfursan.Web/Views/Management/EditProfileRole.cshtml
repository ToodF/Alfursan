@using Alfursan.Domain

@model Alfursan.Web.Models.RoleViewModel

<h2>EditProfileRole</h2>
@using (Html.BeginForm(/*null, null, FormMethod.Post, new { @action = "" }*/))
{
    @Html.DropDownListFor(model => model.ProfileId, (List<SelectListItem>)ViewData["Profiles"], new { @class = "form-control" })

    <div id="contaner-roles">
        @{ Html.RenderAction("_Roles", new { id = 1 });}
    </div>
}
@section scripts
{
    <script type="text/javascript" src="~/Scripts/Alfursan.Management.js"></script>
    <script type="text/javascript" src="~/Scripts/Alfursan.Ajax.js"></script>
    <script>
        $(document).ready(function () {
            AlfursanManagement.EditProfileRoleInit();
        });

    </script>
}