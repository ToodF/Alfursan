@model IEnumerable<Alfursan.Web.Models.UserListViewModel>

<table id="grid-users" class="table table-striped table-bordered hover " cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>@{Write(Alfursan.Resx.Management.Profile);}</th>
            <th>@{Write(Alfursan.Resx.Management.Name);}</th>
            <th>@{Write(Alfursan.Resx.Management.Surname);}</th>
            <th>@{Write(Alfursan.Resx.Management.Email);}</th>
            <th>@{Write(Alfursan.Resx.Management.Phone);}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var user in Model)
            {
                <tr data="@user.UserId">
                    <td>
                        @if (user.Status)
                        {
                            <img src="/Images/icon-active.png" width="12" height="12" />
                        }
                        else
                        {
                            <img src="/Images/icon-passive.png" width="12" height="12" />
                        }
                        
                        @user.ProfileId
                    </td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>
                        @if (user.Status)
                        {
                            <input type="button" value="@Alfursan.Resx.Management.btnStatusPassive" class="btn" name="change-status-passive" data="@user.UserId" />
                        }
                        else
                        {
                            <input type="button" value="@Alfursan.Resx.Management.btnStatusActive" class="btn" name="change-status-active" data="@user.UserId" />
                        }
                        <input type="button" value="@Alfursan.Resx.Management.btnChangePass" class="btn" name="change-pass" data="@user.Email" />
                        <input type="button" value="@Alfursan.Resx.Management.btnDelete" class="btn" name="delete-user" data="@user.UserId" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

