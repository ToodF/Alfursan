@using System.Resources
@using Alfursan.Domain
@using Alfursan.Web.Models
@using Microsoft.Ajax.Utilities

@model List<UserListViewModel>

<div class="new-user-button">
    <button class="btn btn-primary" id="create-user">
        @Resources.Management.Btn_NewUser
    </button>
</div>
<div class="modal fade" id="AlfursanModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Management.Modal_Btn_Close </span></button>
                <h4 class="modal-title" id="myModalLabel">@Resources.Management.Modal_Title_NewUser</h4>
            </div>
            <div class="modal-body">
                @{ Html.RenderAction("_CreateUserView", new { id = 0 });}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Management.Modal_Btn_Close</button>
                <button type="button" class="btn btn-primary">@Resources.Management.Modal_Btn_Save</button>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-danger" id="message-delete-user">
    <span id="user-email"></span>
    @ViewBag.DeleteMessage
    <input type="button" class="btn btn-xs" id="delete-user-ok" value="@Resources.Files.btnOk" />
    <input type="button" class="btn btn-primary btn-xs" id="delete-user-cancel" value="@Resources.Files.btnNo" />
</div>
<div id="grid-container">
</div>

<div class="modal fade" id="ChangePasswordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Management.Modal_Btn_Close </span></button>
                <h4 class="modal-title" id="myModalLabel">@Resources.Management.Modal_Title_ChangePass</h4>
            </div>
            <div class="modal-body">
                @{ Html.RenderPartial("_ChangePass",new ChangePassViewModel());}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Management.Modal_Btn_Close</button>
                <button type="button" class="btn btn-primary">@Resources.Management.Modal_Btn_Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/Alfursan.Management.js"></script>
    <script type="text/javascript" src="~/Scripts/Alfursan.Ajax.js"></script>
    <script>
        $(document).ready(function () {
            AlfursanManagement.UserListInit();
        });

    </script>
}